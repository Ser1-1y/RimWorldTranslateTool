<Window
    Height="600"
    Title="Settings"
    Width="500"
    x:Class="RimWorldModTranslate.Views.SettingsWindow"
    x:DataType="local:SettingsViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:local="clr-namespace:RimWorldModTranslate.Views"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer>
        <StackPanel Margin="12" Spacing="12">

        <TextBlock
            FontSize="18"
            FontWeight="Bold"
            HorizontalAlignment="Center"
            Text="Settings" />

        <StackPanel
            Orientation="Horizontal"
            Spacing="8"
            VerticalAlignment="Center">
            <TextBlock
                Text="Default language:"
                VerticalAlignment="Center"
                Width="120" />
            <ComboBox
                ItemsSource="{Binding Languages}"
                SelectedItem="{Binding SelectedLanguage}"
                Width="200" />

        </StackPanel>

        <StackPanel
            Orientation="Horizontal"
            Spacing="8"
            VerticalAlignment="Center">
            <TextBlock
                Text="Enable auto-save:"
                VerticalAlignment="Center"
                Width="120" />
            <CheckBox IsChecked="{Binding AutoSave}" VerticalAlignment="Center" />
        </StackPanel>

        <StackPanel
            Orientation="Horizontal"
            Spacing="8"
            VerticalAlignment="Center">
            <TextBlock
                Text="Apicase API Token:"
                VerticalAlignment="Center"
                Width="120" />
            <TextBox
                Text="{Binding ApicaseApiToken}"
                VerticalAlignment="Center"
                Width="200"
                Watermark="Leave empty for free token (vcru)" />
        </StackPanel>

        <TextBlock
            FontSize="10"
            Foreground="Gray"
            Text="Free token 'vcru' is used by default. Enter your own token for premium features."
            TextWrapping="Wrap" />

        <Separator />

        <TextBlock
            FontSize="16"
            FontWeight="Bold"
            Text="Translation Settings" />

        <StackPanel
            Orientation="Horizontal"
            Spacing="8"
            VerticalAlignment="Center">
            <TextBlock
                Text="Enable Translation:"
                VerticalAlignment="Center"
                Width="120" />
            <CheckBox IsChecked="{Binding EnableTranslation}" VerticalAlignment="Center" />
        </StackPanel>

        <StackPanel
            Orientation="Horizontal"
            Spacing="8"
            VerticalAlignment="Center">
            <TextBlock
                Text="Translation Provider:"
                VerticalAlignment="Center"
                Width="120" />
            <ComboBox
                ItemsSource="{Binding Providers}"
                SelectedItem="{Binding SelectedProvider}"
                Width="200" />
        </StackPanel>

        <TextBlock
            FontSize="10"
            Foreground="Gray"
            Text="Select your preferred translation service. Some providers require API keys."
            TextWrapping="Wrap" />

        <Separator />

        <TextBlock
            FontSize="16"
            FontWeight="Bold"
            Text="API Keys" />

        <StackPanel
            Orientation="Horizontal"
            Spacing="8"
            VerticalAlignment="Center">
            <TextBlock
                Text="Google Translate:"
                VerticalAlignment="Center"
                Width="120" />
            <TextBox
                Text="{Binding GoogleApiKey}"
                VerticalAlignment="Center"
                Width="200"
                Watermark="Enter Google Translate API key" />
        </StackPanel>

        <StackPanel
            Orientation="Horizontal"
            Spacing="8"
            VerticalAlignment="Center">
            <TextBlock
                Text="DeepL:"
                VerticalAlignment="Center"
                Width="120" />
            <TextBox
                Text="{Binding DeeplApiKey}"
                VerticalAlignment="Center"
                Width="200"
                Watermark="Enter DeepL API key" />
        </StackPanel>

        <StackPanel
            Orientation="Horizontal"
            Spacing="8"
            VerticalAlignment="Center">
            <TextBlock
                Text="Yandex:"
                VerticalAlignment="Center"
                Width="120" />
            <TextBox
                Text="{Binding YandexApiKey}"
                VerticalAlignment="Center"
                Width="200"
                Watermark="Enter Yandex API key" />
        </StackPanel>

        <TextBlock
            FontSize="10"
            Foreground="Gray"
            Text="API keys are optional. Free services (Apicase, LibreTranslate, MyMemory) work without keys."
            TextWrapping="Wrap" />

        <Button
            Click="OnCloseClick"
            Content="Close"
            HorizontalAlignment="Right"
            Width="80" />

        </StackPanel>
    </ScrollViewer>
</Window>