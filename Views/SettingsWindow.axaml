<Window
    Height="300"
    Title="Settings"
    Width="400"
    x:Class="RimWorldModTranslate.Views.SettingsWindow"
    x:DataType="local:SettingsViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:local="clr-namespace:RimWorldModTranslate.Views"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Margin="12" Spacing="12">

        <TextBlock
            FontSize="18"
            FontWeight="Bold"
            HorizontalAlignment="Center"
            Text="Settings" />

        <StackPanel
            Orientation="Horizontal"
            Spacing="8"
            VerticalAlignment="Center">
            <TextBlock
                Text="Default language:"
                VerticalAlignment="Center"
                Width="120" />
            <ComboBox
                ItemsSource="{Binding Languages}"
                SelectedItem="{Binding SelectedLanguage}"
                Width="200" />

        </StackPanel>

        <StackPanel
            Orientation="Horizontal"
            Spacing="8"
            VerticalAlignment="Center">
            <TextBlock
                Text="Enable auto-save:"
                VerticalAlignment="Center"
                Width="120" />
            <CheckBox IsChecked="{Binding AutoSave}" VerticalAlignment="Center" />
        </StackPanel>

        <StackPanel
            Orientation="Horizontal"
            Spacing="8"
            VerticalAlignment="Center">
            <TextBlock
                Text="Apicase API Token:"
                VerticalAlignment="Center"
                Width="120" />
            <TextBox
                Text="{Binding ApicaseApiToken}"
                VerticalAlignment="Center"
                Width="200"
                Watermark="Leave empty for free token (vcru)" />
        </StackPanel>

        <TextBlock
            FontSize="10"
            Foreground="Gray"
            Text="Free token 'vcru' is used by default. Enter your own token for premium features."
            TextWrapping="Wrap" />

        <Button
            Click="OnCloseClick"
            Content="Close"
            HorizontalAlignment="Right"
            Width="80" />

    </StackPanel>
</Window>