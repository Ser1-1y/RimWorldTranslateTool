<Window
    Height="300"
    Title="Translation Progress"
    Width="500"
    x:Class="RimWorldModTranslate.Views.ProgressWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Margin="20" Spacing="15">
        <TextBlock
            FontSize="16"
            FontWeight="Bold"
            HorizontalAlignment="Center"
            Text="Translating..." />

        <ProgressBar
            x:Name="ProgressBar"
            Height="20"
            Maximum="100"
            Value="0" />

        <TextBlock
            x:Name="StatusText"
            HorizontalAlignment="Center"
            Text="Preparing..." />

        <TextBlock
            x:Name="DetailsText"
            FontSize="12"
            Foreground="Gray"
            HorizontalAlignment="Center"
            Text="" />

        <StackPanel
            HorizontalAlignment="Center"
            Orientation="Horizontal"
            Spacing="10">
            <Button
                x:Name="CancelButton"
                Click="OnCancelClick"
                Content="Cancel"
                Width="80" />
        </StackPanel>
    </StackPanel>
</Window>
